<?xml version="1.0" encoding="utf-8" ?>
<ScrollView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
			xmlns:dxg="using:DevExpress.Maui.DataGrid"
			x:Class="DevExpressEmbeddingSample.MauiControls.EmbeddedControl"
			HorizontalOptions="Fill"
			VerticalOptions="Fill">
	<dxg:DataGridView ItemsSource="{embed:MauiBinding Path='Employees'}">
		<dxg:DataGridView.Columns>
			<dxg:TextColumn FieldName="Name" Caption="Name" />
			<dxg:TextColumn FieldName="Position" Caption="Job"/>
		</dxg:DataGridView.Columns>
	</dxg:DataGridView>
</ScrollView>
